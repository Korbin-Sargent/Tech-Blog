<section>
  <h1>Home</h1>

  {{#each blogs as |blog|}}

    <div class="card">
      <div class="card-header">
        {{blog.title}}
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>{{blog.postContent}}</p>
          <footer class="blockquote-footer">{{blog.User.UserName}}
            {{blog.formattedDate}}</footer>
        </blockquote>
      </div>
    </div>

  {{/each}}
</section>