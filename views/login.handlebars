<div class="container d-flex justify-content-center">
  <form class="p-2 mt-4 me-4">
    <fieldset>
      <h1 class="text-center text-custom mt-4">Log into account</h1>

      <legend class="mt-4">Enter Username</legend>
      <div class="form-group row">
        <!-- <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                              <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="email@example.com">
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="exampleInputEmail1" class="form-label mt-4">Email address</label> -->
        <input
          type="text"
          class="form-control"
          id="username-login"
          placeholder="Enter Username"
        />
      </div>

      <div class="form-group">
        <label
          for="exampleInputPassword1"
          class="form-label mt-4"
        >Password</label>
        <input
          type="password"
          class="form-control"
          id="password-login"
          placeholder="Password"
          autocomplete="password-content"
        />
      </div>
      <div class="form-group">

        <div class="d-flex justify-content-center">
          <button
            type="submit"
            class="btn btn-primary mt-5 login-form"
            id="login-form"
          >Submit</button>
          <a
            class="btn btn-primary mt-5 login-form login-link d-flex justify-content-center"
            href="/signup"
          >Sign Up</a>
        </div>
      </div>

    </fieldset>
  </form>
</div>

<script src="/js/login.js"></script>