<div class="card">
  <div class="card-header">
    <h4 class="card-title post-title"><a
        class="link"
        href="/dashboard/edit/{{id}}"
      >{{title}}</a></h4>
    <div class="card-body post-body">
      <p class="card-body post-content">{{postContent}}</p>
      <p class="card-text post-author">Posted by
        <span class="post-username">{{User.UserName}}</span>
        on
        {{format_date created_at}}</p>
    </div>
  </div>
</div>